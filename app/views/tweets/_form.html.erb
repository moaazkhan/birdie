

<div class='well'>
<%= form_for(@tweet, url: { action: action }, html: {class:'form-horizontal'})  do |f| %>
  <fieldset>
    <legend >New Tweet</legend>

    <div class='form-group'>
      <label style="color:black;" for='textArea' class='col-lg-2 control-label'>Content</label>
      <div class='col-lg-10'>
        <!--  using onkeyup to enable javascripts-->
      <%= f.text_area :content, class:'form-control', rows:'5',id:"ta", placeholder: "What's happening?" %>
      </div>
        <!-- Below is the count that is displayed -->

      <span class="text-muted pull-right" id="count1" style="margin-right:15px;">140</span>
    </div>

    <div class='form-group'>
      <div class='col-lg-10 col-lg-offset-2'>
        <%= f.submit submit_label,class:'tweetbtn btn-primary',id: "submit-btn" %>
        <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
      </div>
    </div>
  </fieldset>
<% end %>
